---
import Icon from "@/elements/Icon.astro";
import { getTableBodyWhileLoading } from '@/scripts/explorer/utils'

const columns = [
  { key: "transactionHash", label: "Transaction Hash", className: 'transaction hash' },
  { key: "chainId", label: "Network" },
  { key: "date", label: "Age" },
  { key: "eventName", label: "Event" },
  { key: "transactionSender", label: "From" },
  { key: "contract", label: "Contract" },
  { key: "blockNumber", label: "Block" },
];
---

<div class="table wrapper">
  <div class="table">
    <table>
      <thead>
        <tr>
          {
            columns.map((el) => (
              <th class={el.className || el.key}>
                <button
                  data-table-column={el.key}
                  data-type="sortable"
                  data-sort="neutral"
                  class="table-head"
                >
                  {el.label}
                  <i class="sort-icon" />
                </button>
              </th>
            ))
          }
        </tr>
      </thead>
      <tbody id="explorer-table-body" set:html={getTableBodyWhileLoading()}>
      </tbody>
    </table>
  </div>

  <div class="pagination">
    <aside class="left">
      <a
        class="pagination-action"
        id="pagination-prev"
        data-type="prev-page"
        href="#"
      >
        <Icon variant="arrow-left" />
        <p>Previous</p>
      </a>
    </aside>

    <aside id="pagination-mid-container" class="mid"></aside>

    <aside class="right">
      <a
        class="pagination-action"
        id="pagination-next"
        data-type="next-page"
        href="#"
      >
        <p>Next</p>
        <Icon variant="arrow-right" />
      </a>
    </aside>
  </div>
</div>
